<style>
  #main {
    box-shadow: 3px 3px 10px;
    background-color: white;
    margin-top: 15px;
  }
  .jumbotron {
    background-image: url('/gray3.jpg');
    background-size: 50%;
    margin: 10px 0px 15px 0px;
    box-shadow: 3px 3px 10px black;
    padding: 10px;
    color: #B1810B;
    text-shadow: 3px 3px black;
  }
</style>
<div class="container" id="main">
  <div class="jumbotron">
      <h1 style="text-align:center;">Contact the Developers</h1> 
      <p style="text-align:center; color: white; text-shadow: 2px 2px black;">Comments, questions, concerns, and anything you'd like to send us goes here!<br>Expect a response from apptitutordevs@gmail.com</p> 
  </div>

  <div class="row">
    <div class="col-lg-3"></div>
    <div class="col-lg-6 text-center">
    <%= form_for @message, url: contact_path do |message_form| %>
      <fieldset>
        <div class="field">
          <%= message_form.text_field :email, :value => current_user.email, class: "form-control" %>
        </div>

        <div class="field">
          <%= message_form.text_field :subject, placeholder: "Subject", class: "form-control" %>
        </div>
        
        <div class="field">
          <%= message_form.text_area :content,style: "margin-top: 10px", placeholder: "Message", id: "comment", rows: 5, class: "form-control"%>
        </div>
      </fieldset>
      
      <fieldset>
        <div style="margin-top: 10px" class="field col-lg-offset-0 text-left">
          <%= message_form.submit "Send", class: "btn btn-default" %>
        </div>
      </fieldset>
    </div>
      <% end %>
      <div class="col-lg-3"></div>
  </div>
</div>