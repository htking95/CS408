<!DOCTYPE html>
<html>
<head>
  <title>RateMyClasses</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>

	<!-- Bootstrap partial -->
 	<%= render 'layouts/bootstrapstuff' %>
 	<link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.2-rc.1/css/select2.min.css" rel="stylesheet" />
	<script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.2-rc.1/js/select2.min.js"></script>
</head>

<body style="background-color: black">

<% flash.each do |name, msg| %>
	<% if msg.is_a?(String) %>
		<div class="alert alert-<%= name == "notice" ? "success" : "danger" %> alert-dismissable">
			<button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
			<%= content_tag :div, msg, :id => "flash_#{name}" %>
		</div>
	<% end %>
<% end %>

<% if current_page?('/pages/home') || current_page?('/') %>
    <%#= render 'layouts/home_header' %>
    <div style="margin: 7px 0px 20px 0px; background-color: white">
		<%= yield %>
	</div>
<% else %>
    <%= render 'layouts/header'%>
    <div style="margin: 7px 0px 20px 0px; background-color: white">
		<%= yield %>
	</div>
<% end %>

<!--<p class="notice"><%#= notice %></p>
<p class="alert"><%#= alert %></p>-->


<%= render 'layouts/footer' %>


</body>
</html>
