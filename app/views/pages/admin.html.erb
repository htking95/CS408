<% if current_user.admin? %>
  <% @blank = 0 %>
  <% if @reviews.blank? %>
  <% else %>
    <% @reviews.each do |review| %>
      <% if review.scoreFlag > 2 %>
        <% @blank = 1 %>
        <p><%= review.Comment %></p>
        <p><%= review.created_at %></p>
        flag: <%= review.scoreFlag %>
        <%= link_to 'unflag', unflag_review_path(review), method: :put %>
        <td><%= link_to 'Destroy', review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    <% end %>
  <% end %>

  <% if @answers.blank? %>
  <% else %>
    <% @answers.each do |a| %>
      <% if a.scoreFlag > 2 %>
        <% @blank = 1 %>
        <p><%= a.answer %></p>
        <p><%= a.created_at %></p>
        flag: <%= a.scoreFlag %>
        <%= link_to 'unflag', unflag_answer_path(a), method: :put %>
        <td><%= link_to 'Destroy', a, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    <% end %>
  <% end %>

  <% #if @blank = 0 %>
    <!-- <h3>There are no reviews or questions that have been flagged 3 times.</h3> -->
  <% #end %>

<% else %>
  <h3>This page is only for admins.</h3>
<% end %>