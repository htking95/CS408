<p id="notice"><%= notice %></p>

<h1>Listing Reviews</h1>

<table>
  <thead>
    <tr>
      <th>Userid</th>
      <th>Courseid</th>
      <th>Comment</th>
      <th>Helpfulcount</th>
      <th>Unhelpful</th>
      <th>Funnycount</th>
      <th>Flagcount</th>
      <th>Instructorid</th>
      <th>Tas</th>
      <th>Gradereceived</th>
      <th>Hoursaweek</th>
      <th>Textbookrequired</th>
      <th>Attendancerequired</th>
      <th>Semester</th>
      <th>Yeartaken</th>
      <th>Departmentid</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reviews.each do |review| %>
      <tr>
        <td><%= review.UserID %></td>
        <td><%= review.CourseID %></td>
        <td><%= review.Comment %></td>
        <td><%= review.HelpfulCount %></td>
        <td><%= review.Unhelpful %></td>
        <td><%= review.FunnyCount %></td>
        <td><%= review.FlagCount %></td>
        <td><%= review.InstructorID %></td>
        <td><%= review.TAs %></td>
        <td><%= review.GradeReceived %></td>
        <td><%= review.HoursAWeek %></td>
        <td><%= review.TextbookRequired %></td>
        <td><%= review.AttendanceRequired %></td>
        <td><%= review.Semester %></td>
        <td><%= review.YearTaken %></td>
        <td><%= review.DepartmentID %></td>
        <td><%= link_to 'Show', review %></td>
        <td><%= link_to 'Edit', edit_review_path(review) %></td>
        <td><%= link_to 'Destroy', review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

